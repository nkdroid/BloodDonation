<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nkdroid.blooddonation.ProfileActivity">

    <include layout="@layout/app_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="70dp">


        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_centerInParent="true"
                android:paddingTop="16dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textColor="#000000"
                    android:text="Blood group"/>
                <Spinner
                    android:id="@+id/spbg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>
            </LinearLayout>

            <EditText
                android:id="@+id/unit"
                android:layout_marginTop="8dp"
                android:hint="Number of Units"
                android:singleLine="true"
                android:textColorHint="#000000"
                android:textSize="22sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/area"
                android:layout_marginTop="8dp"
                android:hint="City Name"
                android:singleLine="true"
                android:textColorHint="#000000"
                android:textSize="22sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/areacode"
                android:layout_marginTop="8dp"
                android:hint="Area Code"
                android:singleLine="true"
                android:textColorHint="#000000"
                android:textSize="22sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/date"
                android:layout_marginTop="8dp"
                android:text="Blood Required Date "
                android:textSize="22sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/reqdate"
                android:layout_marginTop="4dp"
                android:hint="Date"
                android:singleLine="true"
                android:textColorHint="#000000"
                android:textSize="22sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/btnreq"
                android:layout_marginTop="8dp"
                android:text="Request Blood"
                android:textSize="25sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@drawable/background_tab_pink"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>